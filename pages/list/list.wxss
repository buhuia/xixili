page{
  height: 100%;
  width: 100%;
}

.total-list{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 90%;
}

.menu{
  flex: 1 0 20%;
  background-color: rgb(236, 226, 226);
}

.menu-list{
  background-color: blue;
  height: 100rpx
}

.select{
  background-color: blueviolet;
}

.title{
  position: sticky;
  background-color: burlywood;
  top: 0rpx;
}

.list{
  flex: 1 0 80%;
}

.content-list{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 250rpx;
}

.food-image{
  height: 200rpx;
  width: 200rpx
}

.food-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
  flex-grow: 1;
}

.food-price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.shopping-cart{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0rpx;
  background-color: blueviolet;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  z-index: 999;
}

.cart-image{
  width: 80rpx;
  height: 80rpx;
}

.cart-button{
  height: 100rpx;
  position: absolute;
  right: 0rpx;
  border-radius: 30rpx;
}

.button-content{
  height: 100rpx;
  line-height: 100rpx;
}