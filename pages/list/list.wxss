page{
  height: 100%;
  width: 100%;
}

.position{
  height: 8%;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  font-size: large;
  border-bottom: 1rpx solid #f6f6f6;
  box-sizing:border-box;
}

.total-list{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 84%;
}

.menu{
  flex: 1 0 20%;
  background-color: #f6f6f6;
}

.menu-list{
  background-color: #f6f6f6;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.menu-text{
  color: #999999;
}

.menu-text-select{
  color: #111111;
}

.menu-select{
  background-color:  #ffffff;
  color: #111111;
}

.title{
  position: sticky;
  background-color: #ffffff;
  top: 0rpx;
  margin: 0 20rpx;
  z-index: 3;
  color: #999999;
}

.list{
  flex: 1 0 80%;
  background-color: #ffffff;
}

.content-list{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 250rpx;
}

.food-image{
  margin: 0 20rpx;
}

.food-info{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 200rpx;
  flex-grow: 1;
  margin-right: 20rpx;
}

.food-price{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.shopping-cart{
  width: 100%;
  height: 8%;
  position: fixed;
  bottom: 0rpx;
  background-color: #f0f0f1;
  display: flex;
  align-items: center;
  z-index: 999;
}

.cart-button{
  height: 100%;
  width: 200rpx;
  position: absolute;
  right: 0rpx;
  background-color: #dba871;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cart-scroll-view{
  height: 800rpx;
}

.detailNumber{
  position: relative;
  left: 30rpx;
  bottom: 10rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #dba871;
  border-radius: 50%;
  text-align: center;
  line-height: 30rpx;
  border: 1rpx solid #ffffff;
  z-index: 2;
  color: #ffffff;
}